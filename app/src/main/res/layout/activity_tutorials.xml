<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akash.firebasedb.Tutorials">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/poykl"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button"
                android:layout_width="262dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="Android Introduction"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="19dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:weightSum="1">


            <Button
                android:id="@+id/button1"
                android:layout_width="262dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:paddingBottom="20dp"
                android:paddingLeft="21dp"
                android:paddingTop="10dp"
                android:text="Activities and Services"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.ActionMode.Title"
                android:textColor="@android:color/background_light"
                android:textSize="19dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:orientation="horizontal"
            android:weightSum="1">


            <Button
                android:id="@+id/button2"
                android:layout_width="262dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:paddingBottom="20dp"
                android:paddingRight="25dp"
                android:paddingTop="10dp"
                android:text="Layouts and Menu"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.ActionMode.Title"
                android:textColor="@android:color/background_light"
                android:textSize="19dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:orientation="horizontal"
            android:weightSum="1">


            <Button
                android:id="@+id/button4"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:paddingBottom="20dp"
                android:paddingLeft="22dp"
                android:paddingTop="10dp"
                android:text="Intents and Fragments"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.ActionMode.Title"
                android:textColor="@android:color/background_light"
                android:textSize="19dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:orientation="horizontal"
            android:weightSum="1">


            <Button
                android:id="@+id/button5"
                android:layout_width="262dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:paddingBottom="20dp"
                android:paddingRight="14dp"
                android:paddingTop="10dp"
                android:text="Threads and SQLite"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.ActionMode.Title"
                android:textColor="@android:color/background_light"
                android:textSize="19dp" />

        </LinearLayout>


    </LinearLayout>


</ScrollView>
